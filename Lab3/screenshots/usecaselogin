@startuml
left to right direction
actor User

rectangle "Login Form System" {
  usecase UC1 as "Đăng nhập thành công"
  usecase UC2 as "Đăng nhập thất bại"
  usecase UC2a as "Sai Username" 
  usecase UC2b as "Sai Password"
  usecase UC3 as "Bỏ trống Username/Password"
  usecase UC4 as "Forgot password?"
  usecase UC5 as "Sign Up"
  usecase UC6 as "Social login"
  usecase UC6a as "Facebook login"
  usecase UC6b as "Twitter login"
  usecase UC6c as "Google login"
}

' Liên kết actor với các use case chính
User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6

' Mối quan hệ chi tiết
UC2 ..> UC2a : <<extend>>
UC2 ..> UC2b : <<extend>>

UC6 ..> UC6a : <<include>>
UC6 ..> UC6b : <<include>>
UC6 ..> UC6c : <<include>>
@enduml
